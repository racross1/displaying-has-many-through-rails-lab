<h2><%= @doctor.name %></h2>
<h3> Department: <%= @doctor.department %></h3>

<strong>Appointments:</strong>
  <% @appointments.each do |appt| %>
    <p>
    <%=link_to "#{appt.patient.name}: ", patient_path(appt.patient.id)%>
    <%=appt[:appointment_datetime].strftime("%B %d, %Y at %k:%M") %>
    </p> 
  <% end %> 

